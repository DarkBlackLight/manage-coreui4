<div class="sidebar sidebar-light sidebar-fixed" id="sidebar">
  <div class="sidebar-brand d-none d-md-flex">
    <svg class="sidebar-brand-full" width="118" height="46" alt="CoreUI Logo">
      <use xlink:href="/manage/assets/brand/coreui.svg#full"></use>
    </svg>
    <svg class="sidebar-brand-narrow" width="46" height="46" alt="CoreUI Logo">
      <use xlink:href="/manage/assets/brand/coreui.svg#signet"></use>
    </svg>
  </div>
  <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="">

    <% @config[:routes].each do |route| %>
      <% if route[:children] && route[:children].size > 0 %>
        <li class="nav-group">
          <a class="nav-link nav-group-toggle" href="#">
            <svg class="nav-icon">
              <use xlink:href="/manage/vendors/@coreui/icons/svg/free.svg#<%= route[:icon] %>"></use>
            </svg>
            <%= route[:name] %>
          </a>
          <ul class="nav-group-items">
            <% route[:children].each do |child_route| %>
              <li class="nav-item">
                <%= link_to child_route[:url], class: 'nav-link' do %>
                  <span class="nav-icon"></span><%= child_route[:name] %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to route[:url], class: 'nav-link' do %>
            <svg class="nav-icon">
              <use xlink:href="/manage/vendors/@coreui/icons/svg/free.svg#<%= route[:icon] %>"></use>
            </svg>
            <%= route[:name] %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <button class="sidebar-toggler" type="button" data-coreui-toggle="unfoldable"></button>
</div>